<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_container"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/courses2"
        android:name="com.example.mohirdev.fragment_main.Courses"
        android:label="fragment_courses"
        tools:layout="@layout/fragment_courses" >
        <action
            android:id="@+id/action_courses2_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_courses2_to_course"
            app:destination="@id/course" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.mohirdev.fragment_main.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/profil"
        android:name="com.example.mohirdev.fragment_main.Profil"
        android:label="fragment_profil"
        tools:layout="@layout/fragment_profil" >
        <action
            android:id="@+id/action_profil_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_profil_to_course"
            app:destination="@id/course" />
    </fragment>
    <fragment
        android:id="@+id/search2"
        android:name="com.example.mohirdev.fragment_main.Search"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_search2_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_search2_to_course"
            app:destination="@id/course" />
    </fragment>
    <fragment
        android:id="@+id/home2"
        android:name="com.example.mohirdev.fragment_main.Home"
        android:label="fragment_home2"
        tools:layout="@layout/fragment_home2" >
        <action
            android:id="@+id/action_home2_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment2"
        android:name="com.example.mohirdev.fragment_main.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/action_settingsFragment2_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/course"
        android:name="com.example.mohirdev.fragment_main.Course"
        android:label="fragment_course"
        tools:layout="@layout/fragment_course" />
</navigation>