<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:background="#6C6767"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/img_video"/>
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/img_video"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="sdafdsfsfd"
        android:layout_marginStart="20dp"
        android:textSize="25sp"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:id="@+id/title_video"/>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/profile_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@color/Lavender"
        android:layout_marginEnd="30dp"
        android:src="@drawable/ic_baseline_library_books_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_video"
        app:riv_corner_radius="30dip"
        app:riv_mutate_background="true"
        app:riv_oval="true" />
    <ImageView
        android:layout_width="70dp"
        android:src="@drawable/ic_baseline_play_arrow_24"
        android:layout_height="70dp"
        android:id="@+id/play_btn"
        app:layout_constraintTop_toTopOf="@+id/img_video"
        app:layout_constraintRight_toRightOf="@+id/img_video"
        app:layout_constraintBottom_toBottomOf="@+id/img_video"
        app:layout_constraintLeft_toLeftOf="@+id/img_video"/>






</androidx.constraintlayout.widget.ConstraintLayout>